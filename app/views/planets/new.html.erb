<h2 class="new_planet">Add New Planet</h2>

<% if flash[:errors] %>
  <p><%= flash[:errors] %>.</p>
<% end %>

<p><%= form_for :planet, url: planets_path do |f| %>
  Name: <%= f.text_field :name %><br>
  Diameter (km): <%= f.number_field :diameter %><br>
  Solid: <%= f.check_box :solid %><br>
  Order: <%= f.number_field :order %><br>
  Explore: <%= f.check_box :explored %><br>
  Rings: <%= f.check_box :rings %><br>
  Moons: <%= f.number_field :moons %><br>
  Image: <%= f.text_field :image %><br>
  Atmosphere: <%= f.text_field :atmosphere %><br>
  Distance From Sun (km): <%= f.number_field :distance_from_sun %><br><br></p>
  <%= f.submit "Create Planet", class: "create_planet_btn"%>
<% end %>
